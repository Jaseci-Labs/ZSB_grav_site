{% extends 'partials/base.html.twig' %}
{% set isFooterVisible = false %}

{% block content %}
    <div class="main-content">
            <!--Section-->
            <section class="has-black-background-color">
                {% if page.header.social %}
                <div class="vlt-site-fixed-bar vlt-site-fixed-bar--left has-white-color position-fixed">
                    <div class="flex-grow-0 flex-shrink-0"></div>
                    <div class="d-flex flex-grow-1 flex-shrink-1 align-items-center justify-content-center">
                        <div class="vlt-site-fixed-bar__socials">
                        {% for item in theme_var('footer-social') %}
                        <a class="vlt-social-icon vlt-social-icon--style-1" href="{{ item.socialIconLink }}" target="_blank"><i class="{{ item.socialIconClass }}" aria-hidden="true"></i></a>
                        {% endfor %}
                        </div>
                    </div>
                    <div class="flex-grow-0 flex-shrink-0 text-center"><a class="vlt-site-fixed-bar__all-link" href="#" target="_blank"><i class="icon-grid"></i></a></div>
                </div>
                {% endif %}
                <!--Site fixed bar-->
                <div class="vlt-site-fixed-bar vlt-site-fixed-bar--right has-white-color position-fixed">
                    <div class="flex-grow-0 flex-shrink-0"></div>
                    <div class="d-flex flex-grow-1 flex-shrink-1 align-items-center justify-content-center">
                        <div class="vlt-swiper-progress vlt-slidedeck-anchor" data-direction="vertical"><span class="current"></span>
                            <div class="bar"><span></span></div><span class="total"></span>
                        </div>
                    </div>
                    <div class="flex-grow-0 flex-shrink-0"></div>
                </div>

                <!--showcase-->
                <div class="vlt-project-showcase vlt-project-showcase--style-3" data-navigation-anchor=".vlt-slidedeck-anchor" data-loop="false">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">

                            {% for slide in page.header.slides %}
                            <div class="swiper-slide">
                                <div class="vlt-project-showcase__item">
                                    {% if (slide.media_type == 'image') %}
                                    <div class="vlt-project-showcase__image" style="background-image: url('{{ page.media.images[slide.background_image].quality(80).url }}');"></div>
                                    {% endif %}
                                    {% if (slide.media_type == 'video') %}
                                    <video id="bv_player" class="vlt-project-showcase__image background-video" poster="{{page.media.images[slide.background_image].quality(80).url}}" autoplay playsinline muted loop>
                                        <source src="{{  page.media.videos[slide.background_video].url  }}" type="video/mp4">
                                    </video>
                                    <script>
                                        document.getElementById('bv_player').play();
                                    </script>
                                    {% endif %}
                                    <div class="hero-overlay">&nbsp;</div>
                                    <div class="vlt-project-showcase__content" data-swiper-parallax-y="-300">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-11 offset-1"><span class="vlt-project-showcase__category">{{ slide.subheading }}</span>
                                                    <h2 class="vlt-project-showcase__title has-cursor">{{ slide.heading }}</h2>
                                                    <p class="vlt-project-showcase__description">{{ slide.description }}</p>
                                                    <!--Simple link--><a class="vlt-simple-link vlt-simple-link--md" href="{{ slide.button_url }}" target="_self">{{ slide.button_label }}<i class="icon-arrow-top-right"></i></a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            {% endfor %}
                            {# <div class="swiper-slide">
                                <div class="vlt-project-showcase__item">
                                    <div class="hero-overlay">&nbsp;</div>
                                    <div class="vlt-project-showcase__content" data-swiper-parallax-y="-300">
                                        <div class="container">
                                            <div class="row">
                                                <div class="col-lg-10 offset-lg-1">
                                                    <div class="text-center">
                                                        <h2 class="vlt-project-showcase__heading has-white-color">Are you ready?</h2>
                                                        <div class="vlt-gap-50"></div>
                                                        <!--Button--><a class="vlt-btn vlt-btn--primary vlt-btn--md" href="contact-01.html" target="_self">Get an early invite</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div> #}

                        </div>
                    </div>
                </div>

            </section>
            <!--Section-->
    </div>
{% endblock %}
