<!--Section-->
<section id="hero_youtube_intro" class="jarallax has-white-color has-black-background-color">

	<img class="jarallax-img" src="{{ page.media.images[page.header.backdrop].url }}" alt="" loading="lazy">
	<div class="row no-gutters">
		<div class="col-lg-6 vlt-column-space-to-container d-flex align-items-center to-left">
			<div>
				{# <!--Particle image--><img class="vlt-particle" src="{{ url('theme://images/root/square-plus-pattern.png') }}" data-animation-name="zoomIn" alt="" style="position: absolute; bottom: 50px; right: 0; max-width: 220px;opacity:0.1" loading="lazy"> #}

				<!--Animated block-->
					<div class="vlt-animated-block" data-aos="fade" data-aos-delay="100"> <h6 class="has-white-color">{{ page.header.smallHeading }}</h6>
				</div>

				<!--Animated block-->
				<div class="vlt-animated-block">
					<div
						style="color: #2F2F2F;">
						<!--Stroke text-->
						<div class="vlt-stroke-text vlt-stroke-text--lg" data-aos="fade-right" data-aos-delay="200">ZSB
						</div>
					</div>
					<h2 class="negative-top-offset has-white-color" data-aos="fade-left" data-aos-delay="250">{{page.header.heading}}</h2>
				</div>
				<div class="vlt-gap-20"></div>
				<!--Animated block-->
				<div class="vlt-animated-block" data-aos="fade-up" data-aos-delay="500">
					<p class="subtext">{{page.header.subtext}}</p>
				</div>
				<div class="vlt-gap-50"></div>
				<!--Animated block-->
				<div class="vlt-animated-block">
					<!--Button-->
					<a class="vlt-btn vlt-btn--tertiary vlt-btn--md" href="{{page.header.buttonUrl}}" target="{{page.header.buttonTarget}}" data-aos="fade" data-aos-delay="900">{{page.header.buttonText}}</a>
					<a class="vlt-btn vlt-btn--secondary vlt-btn--md" href="{{ page.header.videoUrl }}" data-fancybox data-aos="fade" data-aos-delay="1000" rel="nofollow">&nbsp;<i class="icon-play"></i>&nbsp;</a>
				</div>
			</div>
		</div>
		{# <div class="col-lg-6 d-sm-none d-xs-none d-md-none">
			<img class="vlt-column-space-to-container" src="{{ url('theme://images/root/zsb-ipad.png') }}" data-aos="fade-left" data-aos-delay="500" alt="" style="width:100%" loading="lazy">
			<div class="to-right">
				<!--Video button-->
				<div class="vlt-video-button vlt-particle" data-aos="zoom-in" data-aos-delay="1000">
					<a href="{{ page.header.videoUrl }}" data-fancybox data-small-btn="true" rel="nofollow">
						<i class="icon-play"></i>
					</a>
					<h6>Find Out More</h6>
				</div>
			</div>
		</div> #}

	</div>
</section>
