{% set collection = page.collection() %}
<!--Section-->
<section class="has-white-color has-black-background-color">
    <div class="vlt-gap-120"></div>
    <div class="container">
        <div class="text-center">
            <!--Animated block-->
            <div class="vlt-animated-block" data-aos="fade" data-aos-delay="0">
                <!--Section title-->
                <div class="vlt-section-title vlt-section-title--style-1">
                    <span class="vlt-section-title__subtitle">{{ page.header.smallTitle }}</span>
                    <h3 class="vlt-section-title__title has-white-color">{{ page.title }}</h3>

                    {% if page.content %}
                        <div class="vlt-gap-40"></div>
                        <div class="vlt-animated-block" data-aos="fade" data-aos-delay="20">
                            <p class="fz-3">{{ page.content|raw }}</p>
                        </div>
                    {% endif %}
                </div>
        </div>
        <div class="vlt-gap-80"></div>

        <div class="vlt-isotope-grid" data-columns="3" data-layout="masonry" data-x-gap="5|5" data-y-gap="5|5">
            <div class="grid-sizer"></div>
            {% for post in collection %}

                <!--Animated block-->
                <div class="vlt-animated-block" data-aos="fade" data-aos-delay="{{loop.index+1}}00">
                    <div class="grid-item">
                        <!--Blog item-->
                        <article class="vlt-post vlt-post--style-3">
                            <div class="vlt-post__media">
                                <a class="vlt-post__link" href="{{ post.url }}"></a>
                                {% if post.media.images is not empty %}
                                    {{ post.media.images[post.header.header_image_file]?: post.media.images | first }}
                                {% else %}
                                    <img src="{{ theme_url }}/images/placeholders/default.jpg" alt="" loading="lazy" />
                                {% endif %}
                            </div>
                            <div class="has-dark-background-color vlt-post__content">
                                <header class="vlt-post__header">
                                    <div class="vlt-post-meta">
                                        <span>{{ post.date|date("F d, Y") }}</span>
                                        {% if post.taxonomy.tag %}
                                        <span>
                                        {% for tag in post.taxonomy.tag %}
                                            <a href="{{ post.parent.url }}/tag{{ config.system.param_sep }}{{ tag }}">{{ tag }}</a>
                                        {% endfor %}
                                        </span>
                                        {% endif %}
                                    </div>
                                    <h3 class="vlt-post-title has-white-color"><a href="{{ post.url }}">{{ post.title }}</a>
                                    </h3>
                                </header>
                                <div class="vlt-post-excerpt">
                                </div>
                            </div>
                        </article>
                    </div>
                </div>

            {% endfor %}
        </div>

        <div class="vlt-gap-80"></div>
        <div class="text-center has-black-color">
            <!--Animated block-->
            <div class="vlt-animated-block" data-aos="fade" data-aos-delay="400">
                <!--Simple link--><a class="vlt-simple-link vlt-simple-link--md has-white-color" href="posts" target="_self">See all posts<i class="icon-arrow-top-right"></i></a>
            </div>
        </div>
    </div>
    <div class="vlt-gap-120"></div>
</section>
<!-- Section -->