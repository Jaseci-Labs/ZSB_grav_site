{% set logo = theme_var('custom_logo') %}
{% set logo_file = (logo|first).name %}
{% if isFooterVisible %}
<footer class="vlt-footer vlt-footer--style-2 vlt-footer--fixed text-lg-left text-center">
    <div class="container position-relative">
        <!--Particle image--><img src="{{ url('theme://images/root/square-plus-pattern.png') }}" alt="" style="position: absolute; bottom: 50px; left: 0px; z-index:-1; max-width: 210px;" loading="lazy">
        <div class="row">
            <div class="col-lg-3">
                <!--Widget-->
                <div class="vlt-widget vlt-widget--html"><a href="{{ base_url == '' ? '/' : base_url }}"><img src="{{ url('theme://images/logo/' ~ logo_file) }}" alt="{{ logo_file }}"  alt="" style="height: 30px;" loading="lazy"></a></div>
            </div>
            <div class="col-lg-2 col-sm-6">
                <!--Widget-->
                <div class="vlt-widget vlt-widget--text">
                    <ul>
                        {% for page in pages.children.visible %}
                        {% set current_page = (page.active or page.activeChild) ? 'active' : '' %}
                        <li><a class="{{ current_page }}" href="{{ page.url }}">{{ page.menu }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6">
                <!--Widget-->
                <div class="vlt-widget vlt-widget--text">
                    <ul>
                    {% for item in theme_var('footer-social') %}
                        <li>
                            <a href="{{ item.socialIconLink }}">
                                <i class="{{ item.socialIconClass }}" aria-hidden="true"></i> |
                                <span>{{ item.socialIconText }}</span>
                            </a>
                        </li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
            <div class="col-lg-3 col-sm-6">
                <!--Widget-->
                <div class="vlt-widget vlt-widget--text">
                    <p>{{ theme_var('footer-address') | markdown}}</p>
                </div>
            </div>
            <div class="col-lg-2 col-sm-6">
                <!--Widget-->
                <div class="vlt-widget vlt-widget--text"><a href="mailto:{{ theme_var('footer-contact') }}">{{ theme_var('footer-contact') }}</a></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12 text-lg-right text-center">
                <div class="vlt-gap-20"></div>
                <small>
                    {% for item in theme_var('navbar_footer_links') %}
                        <a href="{{item.url}}" target="{{item.target}}">{{item.label}}</a> â—‹
                    {% endfor %}
                {{ theme_var('footer-copyright') }}</small>
                <div class="vlt-gap-20"></div>
            </div>
        </div>
    </div>
</footer>
{% endif %}